{
  "name": "dnd-character-management",
  "version": "1.0.0",
  "description": "A simple interface to help users create and keep track of their dnd characters",
  "author": "Kevin Zhang",
  "license": "ISC",
  "scripts": {
    "babel-node": "babel-node --presets=es2015,react,stage-0 --ignore node_modules",
    "monitor": "nodemon --ignore app/public/ --ignore app/client/ --exec npm run babel-node -- app/server.js",
    "dev": "webpack -d --watch --progress & npm run monitor",
    "start": "babel-node app/server.js"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "hbs": "^4.0.1",
    "mongoose": "^4.6.5",
    "mongoose-url-slugs": "^0.2.1",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.0.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.7",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "json-loader": "^0.5.4",
    "nodemon": "^1.11.0",
    "webpack": "^1.13.3"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "ignore": [
      "/node_modules/"
    ]
  }
}
